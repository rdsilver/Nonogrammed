<h1>Listing grids</h1>

<table>
  <tr>
    <th>Height</th>
    <th>Width</th>
    <th>Solution</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @grids.each do |grid| %>
  <tr>
    <td><%= grid.height %></td>
    <td><%= grid.width %></td>
    <td><%= grid.solution %></td>
    <td><%= link_to 'Show', grid %></td>
    <td><%= link_to 'Edit', edit_grid_path(grid) %></td>
    <td><%= link_to 'Destroy', grid, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

