= form_for(@puzzle) do |f|
  - if @puzzle.errors.any?
    #error_explanation
      %h2
        = pluralize(@puzzle.errors.count, "error")
        prohibited this puzzle from being saved:
      %ul
        - @puzzle.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :difficulty
    %br
    = f.number_field :difficulty
  .field
    = f.label :grid_id
    %br
    = f.number_field :grid_id
  .field
    = f.label :points
    %br
    = f.number_field :points
  .actions
    = f.submit
