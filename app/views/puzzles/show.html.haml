%div.puzzle_description
  %table.puzzle_description_table
    %tr
      %td.left_puzzle_description_column
        Puzzle Number
      %td.placeholder_column
        = "--->"
      %td.right_puzzle_description_column
        = @puzzle_name
    %tr
      %td.left_puzzle_description_column
        Puzzle Difficulty
      %td.placeholder_column
        = "--->" 
      %td.right_puzzle_description_column
        = @puzzle_difficulty
    %tr
      %td.left_puzzle_description_column
        Puzzle Points
      %td.placeholder_column
        = "--->"
      %td.right_puzzle_description_column
        = @puzzle_points
%p.center_text.bold_text.small_margin_top "Completion checks are done automatically!"        
%div#puzzle_and_buttons_div        
  %table#puzzle_table
    %tr.puzzle_numbers_row
      - (0..@puzzle_width).each do |n|
        %td
          - unless n == 0
            = "#"
    - @puzzle_height.times do
      %tr
        %td.puzzle_numbers_column
          = "#"
        - @puzzle_width.times do
          %td.puzzle_cell
  =submit_tag "Reset Puzzle" , id: "reset_puzzle"
  =submit_tag "Give me a hint!" , id: "hint_puzzle"


