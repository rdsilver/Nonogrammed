  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem "haml-rails"
gem 'jquery-rails'
gem "therubyracer"
gem "less-rails"
gem 'twitter-bootstrap-rails'
gem 'bootstrap-sass', '~> 2.3.1.0' 
gem "simple-navigation"



group :production do
  gem 'pg', '0.12.2'
end

